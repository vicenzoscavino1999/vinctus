# Vinctus Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================
# Firebase Configuration (Required for Auth)
# ============================================
# Get these values from Firebase Console > Project Settings
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# App Check (optional, recommended for staged rollout)
# Keep disabled by default; enable in staging first.
VITE_ENABLE_FIREBASE_APP_CHECK=false
# reCAPTCHA v3 site key from Firebase App Check console
VITE_FIREBASE_APP_CHECK_SITE_KEY=
# Optional debug token for local/staging testing.
# Use "true" to auto-generate in browser console, or a fixed token string.
VITE_FIREBASE_APP_CHECK_DEBUG_TOKEN=
# true by default. Set false only for controlled troubleshooting.
VITE_FIREBASE_APP_CHECK_TOKEN_AUTO_REFRESH=true

# Local emulator toggle (optional)
# Set to "true" to use Firebase emulators in local dev
VITE_USE_FIREBASE_EMULATOR=false
# Optional: override emulator host (default: 127.0.0.1)
VITE_FIREBASE_EMULATOR_HOST=127.0.0.1

# Apple Sign-In toggle (keep disabled until Apple Developer setup is complete)
# true  -> show/use Apple login button
# false -> hide/disable Apple login
VITE_ENABLE_APPLE_SIGN_IN=false

# ============================================
# Discover APIs (Optional)
# ============================================
# Public discover content now uses /api/discover (server-side proxy + cache).
# Optional browser fallback proxy for local/dev when /api/discover is unavailable.
# Default fallback proxy: https://api.allorigins.win/raw?url=
VITE_CORS_PROXY=

# Optional country for direct music fallback in browser (default: US)
VITE_MUSIC_COUNTRY=US

# Optional country for server-side music provider (default: US)
DISCOVER_MUSIC_COUNTRY=US

# ============================================
# App Review demo seed (optional)
# ============================================
# Used by scripts/seed-app-review.mjs
REVIEW_DEMO_UID=reviewer_demo
REVIEW_DEMO_EMAIL=reviewer@vinctus.local
REVIEW_DEMO_PASSWORD=Review123!
# Optional for final App Store submit package generation.
# Keep unset in normal dev. Set only in local secure env before submission.
REVIEW_PROD_EMAIL=
REVIEW_PROD_PASSWORD=
# true -> force emulator seed (recommended)
# false -> allow non-emulator seed only if ALLOW_LIVE_REVIEW_SEED=true
REVIEW_SEED_USE_EMULATORS=true
ALLOW_LIVE_REVIEW_SEED=false

# ============================================
# Legal URLs (Recommended for App Store)
# ============================================
# Public URLs used in Login/Help and App Store metadata
VITE_PRIVACY_POLICY_URL=https://vinctus.app/privacy
VITE_TERMS_OF_SERVICE_URL=https://vinctus.app/terms
VITE_COMMUNITY_GUIDELINES_URL=https://vinctus.app/community-guidelines
VITE_SUPPORT_URL=https://vinctus.app/support
VITE_SUPPORT_EMAIL=support@vinctus.app
VITE_SECURITY_EMAIL=security@vinctus.app

# ============================================
# Server-side AI API (Vercel / api/chat.ts)
# ============================================
# These variables are server-only. Do not expose them in client bundles.
GEMINI_API_KEY=
GEMINI_TIMEOUT_MS=12000
NVIDIA_API_KEY=
NVIDIA_BASE_URL=https://integrate.api.nvidia.com/v1
NVIDIA_MODEL=moonshotai/kimi-k2-instruct
CHAT_USER_MINUTE_LIMIT=20
CHAT_USER_DAY_LIMIT=300
CHAT_IP_MINUTE_LIMIT=60
CHAT_IP_DAY_LIMIT=2000

# ============================================
# YouTube Metadata API (Vercel / api/youtube.ts)
# ============================================
# Optional but recommended for richer YouTube posts:
# validates embeddable videos, title/channel metadata and cached responses.
YOUTUBE_API_KEY=
YOUTUBE_CACHE_TTL_SECONDS=14400
YOUTUBE_IP_MINUTE_LIMIT=120
YOUTUBE_IP_DAY_LIMIT=4000

# ============================================
# YouTube Search API (Vercel / api/youtube-search.ts)
# ============================================
# Used by Discover to auto-fill Publications with real YouTube videos.
YOUTUBE_SEARCH_CACHE_TTL_SECONDS=1200
YOUTUBE_SEARCH_IP_MINUTE_LIMIT=24
YOUTUBE_SEARCH_IP_DAY_LIMIT=800
YOUTUBE_SEARCH_REGION_CODE=US

# ============================================
# YouTube Shorts Stories API (Vercel / api/youtube-shorts.ts)
# ============================================
# Used by Stories to seed up to 20 short-form videos with 72h server refresh.
YOUTUBE_SHORTS_CACHE_TTL_SECONDS=259200
YOUTUBE_SHORTS_IP_MINUTE_LIMIT=12
YOUTUBE_SHORTS_IP_DAY_LIMIT=400
YOUTUBE_SHORTS_REGION_CODE=US
