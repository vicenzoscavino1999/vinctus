{
    "firestore": {
        "rules": "firestore.rules"
    },
    "functions": {
        "source": "functions",
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ],
        "runtime": "nodejs20"
    },
    "hosting": {
        "public": "dist",
        "predeploy": [
            "npm run build"
        ],
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}
