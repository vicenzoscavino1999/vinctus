rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Strict image type validation
    function isValidImageType() {
      return request.resource.contentType in [
        'image/jpeg',
        'image/png',
        'image/gif',
        'image/webp'
      ];
    }
    
    // Strict video type validation
    function isValidVideoType() {
      return request.resource.contentType in [
        'video/mp4',
        'video/webm',
        'video/quicktime'
      ];
    }
    
    function isUnderImageSizeLimit() {
      return request.resource.size < 10 * 1024 * 1024; // 10MB
    }
    
    function isUnderVideoSizeLimit() {
      return request.resource.size < 100 * 1024 * 1024; // 100MB
    }

    function isUnderStoryVideoSizeLimit() {
      return request.resource.size < 25 * 1024 * 1024; // 25MB
    }

    function isValidCollectionFileType() {
      return request.resource.contentType in [
        'application/pdf',
        'text/plain',
        'text/markdown',
        'application/json',
        'application/zip',
        'application/x-zip-compressed',
        'application/vnd.openxmlformats-officedocument.wordprocessingml.document',
        'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet',
        'application/vnd.openxmlformats-officedocument.presentationml.presentation',
        'audio/mpeg',
        'audio/wav',
        'audio/ogg',
        'video/mp4',
        'video/webm',
        'video/quicktime',
        'image/jpeg',
        'image/png',
        'image/gif',
        'image/webp'
      ];
    }

    function isValidChatFileType() {
      return request.resource.contentType in [
        'application/pdf',
        'application/msword',
        'application/vnd.ms-excel',
        'application/vnd.ms-powerpoint',
        'application/vnd.openxmlformats-officedocument.wordprocessingml.document',
        'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet',
        'application/vnd.openxmlformats-officedocument.presentationml.presentation'
      ];
    }

    function isUnderCollectionFileSizeLimit() {
      return request.resource.size < 25 * 1024 * 1024; // 25MB
    }
    
    // CRITICAL: resource == null prevents overwrite
    // NOTE: Requires Object Versioning enabled on bucket
    // Run: gsutil versioning set on gs://vinctus-daf32.appspot.com
    function isNewFile() {
      return resource == null;
    }
    
    // Post images: posts/{userId}/{postId}/images/{filename}
    match /posts/{userId}/{postId}/images/{filename} {
      allow read: if true;
      
      allow create: if isAuthenticated()
        && isOwner(userId)
        && isNewFile()
        && isValidImageType()
        && isUnderImageSizeLimit();
      
      allow delete: if isAuthenticated() && isOwner(userId);
      allow update: if false;
    }
    
    // Post videos: posts/{userId}/{postId}/videos/{filename}
    match /posts/{userId}/{postId}/videos/{filename} {
      allow read: if true;
      
      allow create: if isAuthenticated()
        && isOwner(userId)
        && isNewFile()
        && isValidVideoType()
        && isUnderVideoSizeLimit();
      
      allow delete: if isAuthenticated() && isOwner(userId);
      allow update: if false;
    }

    // Post files: posts/{userId}/{postId}/files/{filename}
    match /posts/{userId}/{postId}/files/{filename} {
      allow read: if true;

      allow create: if isAuthenticated()
        && isOwner(userId)
        && isNewFile()
        && isValidChatFileType()
        && isUnderCollectionFileSizeLimit();

      allow delete: if isAuthenticated() && isOwner(userId);
      allow update: if false;
    }

    // Profile photos: profiles/{userId}/avatar/{filename}
    match /profiles/{userId}/avatar/{filename} {
      allow read: if true;

      allow create: if isAuthenticated()
        && isOwner(userId)
        && isNewFile()
        && isValidImageType()
        && isUnderImageSizeLimit();

      allow delete: if isAuthenticated() && isOwner(userId);
      allow update: if false;
    }

    // Group icons: groups/{userId}/{groupId}/icon/{filename}
    match /groups/{userId}/{groupId}/icon/{filename} {
      allow read: if true;

      allow create: if isAuthenticated()
        && isOwner(userId)
        && isNewFile()
        && isValidImageType()
        && isUnderImageSizeLimit();

      allow delete: if isAuthenticated() && isOwner(userId);
      allow update: if false;
    }

    // Story media: stories/{userId}/{storyId}/original/{filename}
    match /stories/{userId}/{storyId}/original/{filename} {
      allow read: if isAuthenticated();

      allow create: if isAuthenticated()
        && isOwner(userId)
        && isNewFile()
        && (
          (isValidImageType() && isUnderImageSizeLimit())
          || (isValidVideoType() && isUnderStoryVideoSizeLimit())
        );

      allow delete: if isAuthenticated() && isOwner(userId);
      allow update: if false;
    }

    // Story thumbnails: stories/{userId}/{storyId}/thumb/{filename}
    match /stories/{userId}/{storyId}/thumb/{filename} {
      allow read: if isAuthenticated();

      allow create: if isAuthenticated()
        && isOwner(userId)
        && isNewFile()
        && isValidImageType()
        && isUnderImageSizeLimit();

      allow delete: if isAuthenticated() && isOwner(userId);
      allow update: if false;
    }

    // Conversation attachments: conversations/{conversationId}/attachments/{userId}/{messageId}/{filename}
    match /conversations/{conversationId}/attachments/{userId}/{messageId}/{filename} {
      allow read: if isAuthenticated();

      allow create: if isAuthenticated()
        && isOwner(userId)
        && isNewFile()
        && (
          (isValidImageType() && isUnderImageSizeLimit())
          || (isValidChatFileType() && isUnderCollectionFileSizeLimit())
        );

      allow delete: if isAuthenticated() && isOwner(userId);
      allow update: if false;
    }

    // Conversation thumbnails: conversations/{conversationId}/thumbnails/{userId}/{messageId}/{filename}
    match /conversations/{conversationId}/thumbnails/{userId}/{messageId}/{filename} {
      allow read: if isAuthenticated();

      allow create: if isAuthenticated()
        && isOwner(userId)
        && isNewFile()
        && isValidImageType()
        && isUnderImageSizeLimit();

      allow delete: if isAuthenticated() && isOwner(userId);
      allow update: if false;
    }

    // Collection files: collections/{userId}/{collectionId}/{itemId}/{filename}
    match /collections/{userId}/{collectionId}/{itemId}/{filename} {
      allow read: if isAuthenticated() && isOwner(userId);

      allow create: if isAuthenticated()
        && isOwner(userId)
        && isNewFile()
        && isValidCollectionFileType()
        && isUnderCollectionFileSizeLimit();

      allow delete: if isAuthenticated() && isOwner(userId);
      allow update: if false;
    }

    // Contribution files: contributions/{userId}/{contributionId}/{filename}
    match /contributions/{userId}/{contributionId}/{filename} {
      allow read: if true;

      allow create: if isAuthenticated()
        && isOwner(userId)
        && isNewFile()
        && isValidCollectionFileType()
        && isUnderCollectionFileSizeLimit();

      allow delete: if isAuthenticated() && isOwner(userId);
      allow update: if false;
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
